
<% if user_signed_in? %>

<table class="table table-success table-striped table-border table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>

    <% if friend.user == current_user %>

      <tr>
        <td><%= friend.first_name %>
          <%= friend.last_name %></td>
          
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td> 
      
        <td><%= link_to 'Show', friend, class: "btn btn-success btn-sm" %></td>

        <td><%= link_to 'Edit', edit_friend_path(friend),class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>

      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-success" %>

<% else %>

  
  <%=render template: 'home/index' %>



<%end%>