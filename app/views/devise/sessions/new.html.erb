
<div class="card mb-3">
 <h2 class=" mt-2 ms-4">Log in</h2>
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="card-body">
    <div class="field form-group mt-3">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="field form-group mt-3">
    
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group mt-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mt-3 mb-4">
    <%= f.submit "Log in", class: "btn  btn-warning btn-sm" %>
  </div>
<% end %>


  </div>
</div>


















