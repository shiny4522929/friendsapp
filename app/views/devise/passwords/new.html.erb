<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field from-group mt-5">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= f.submit "Send me reset password instructions", class: "btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
